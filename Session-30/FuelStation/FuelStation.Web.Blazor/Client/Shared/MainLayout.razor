@inherits LayoutComponentBase

<div class="page" >
    <div style="display: flex; flex-direction: column; align-items: center;" hidden= "@i">
        <h1>Welcome!</h1>
        <br />
        <br />
        <br />
        <h5>Login as:...</h5>
        <div style="display: flex; flex-direction: row; justify-content: center;">
            <button style="width: 200px; height: 200px; border: 2px solid black; border-radius: 10px; margin: 10px; background-color: white;" @onclick="(e) => ButtonClicked(e, 'c')">Cashier</button>
            <button style="width: 200px; height: 200px; border: 2px solid black; border-radius: 10px; margin: 10px; background-color: white;" @onclick="(e) => ButtonClicked(e, 's')">Staff</button>
            <button style="width: 200px; height: 200px; border: 2px solid black; border-radius: 10px; margin: 10px; background-color: white;" @onclick="(e) => ButtonClicked(e, 'm')">Manager</button>
        </div>
    </div>
    @if (i) {
        
    <div class="sidebar">
        <NavMenu person="@person" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
    }
</div>

@code {
    public bool i = false;

    [Parameter]
    public char person { get; set; }

    private void ButtonClicked(MouseEventArgs e, char _person) {
        i = true;
        person = _person;
    }

}